#!/usr/bin/env python
import rospy
import qrencode
import argparse

rospy.init_node('generate_qr_code_node')
rospy.loginfo('Inside generate_qr_code script')

parser = argparse.ArgumentParser(description='generate qr-code')
parser.add_argument('data', metavar='D', type=str, nargs=5)
x, y, host, port, filename = parser.parse_args().data
str_ = "http://{}:{}/beverage?x={}&y={}".format(host, port, x, y)
qr = qrencode.encode_scaled(str_, size=100)[2]
qr.save(filename + ".png")
rospy.loginfo('Done.')
